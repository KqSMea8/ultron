{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "jsRules": {
        "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-double"],
        "no-string-literal": false,
        "object-literal-shorthand": false,
        "object-literal-sort-keys": [false, "ignore-case", "match-declaration-order", "shorthand-first"],
        "no-console": [false],
        "semicolon": [true, "always", "ignore-bound-class-methods"]
    },
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "indent": [true, "spaces", 4],
        "no-duplicate-imports": true,
        "class-name": true,
        "max-classes-per-file": [true, 3],
        "interface-name": [true, "always-prefix"],
        "prefer-method-signature": true,
        "new-parens": true,
        "no-angle-bracket-type-assertion": true,
        "no-trailing-whitespace": true,
        "ordered-imports": [
            false,
            {
                "grouped-imports": false,
                "import-sources-order": "case-insensitive",
                "named-imports-order": "case-insensitive"
            }
        ],
        "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-double"],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "prefer-const": [true, {"destructuring": "all"}],
        "import-spacing": true,
        "no-var-requires": false,
        "object-literal-shorthand": false,
        "object-literal-sort-keys": [false, "ignore-case", "match-declaration-order", "shorthand-first"],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor"
                ]
            }
        ],
        "no-string-literal": false,
        "align": [true, "parameters", "statements"],
        "no-unused-expression": false,
        "array-type": [true, "array-simple"],
        "no-empty-interface": false,
        "no-bitwise": false,
        "no-empty": [true, "allow-empty-catch"],
        "encoding": true,
        "comment-format": [true, "check-space"],
        "jsdoc-format": [true, "check-multiline-start"],
        "jsx-alignment": true,
        "jsx-curly-spacing": [true, "always", "never"],
        "jsx-self-close": true,
        "jsx-wrap-multiline": true,
        "jsx-no-multiline-js": false,
        "jsx-key": true
    },
    "rulesDirectory": [
        "src/",
        "tests/"
    ]
}